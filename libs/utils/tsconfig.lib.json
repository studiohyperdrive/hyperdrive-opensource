{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "../../dist/out-tsc",
		"declaration": true,
		"declarationMap": true,
		"inlineSources": true,
		"types": [],
		"lib": ["dom", "es2018"]
	},
	"angularCompilerOptions": {
		"enableIvy": true,
		"skipTemplateCodegen": true,
		"strictMetadataEmit": true,
		"enableResourceInlining": true
	},
	"exclude": ["src/test.ts", "**/*.spec.ts"],
	"include": ["**/*.ts"]
}
