{
	"name": "@studiohyperdrive/pagination",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/nodejs/src",
	"projectType": "library",
	"release": {
		"version": {
			"generatorOptions": {
				"packageRoot": "dist\\{projectRoot}",
				"currentVersionResolver": "git-tag"
			}
		}
	},
	"tags": [],
	"targets": {
		"build": {
			"executor": "@nx/js:tsc",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/libs/nodejs",
				"main": "libs/nodejs/src/index.ts",
				"tsConfig": "libs/nodejs/tsconfig.lib.json",
				"assets": ["libs/nodejs/*.md"]
			}
		},
		"nx-release-publish": {
			"options": {
				"packageRoot": "dist\\{projectRoot}"
			}
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"jestConfig": "libs/nodejs/jest.config.ts"
			}
		}
	}
}
