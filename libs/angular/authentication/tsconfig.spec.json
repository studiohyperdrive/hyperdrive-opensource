{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "../../dist/out-tsc",
		"module": "preserve",
		"target": "es2016",
		"types": ["jest", "node"],
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "bundler",
		"isolatedModules": true
	},
	"files": ["src/test-setup.ts"],
	"include": ["jest.config.ts", "src/**/*.test.ts", "src/**/*.spec.ts", "src/**/*.d.ts"]
}
